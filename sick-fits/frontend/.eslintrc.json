{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-unused-vars":"warn",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "semi": true,
                "singleQuote": true,
                "endOfLine": "auto",
                "singleAttributePerLine": true,
                "tabWidth": 2,
                "overrides": [
                  {
                    "files": "*.scss",
                    "options": {
                      "singleQuote": false
                    }
                  }
                ]
              }
          ],
          "react/prop-types" : 0
    }
}
